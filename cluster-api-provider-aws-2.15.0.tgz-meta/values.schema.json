{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "tag": {
            "type": "string"
        },
        "infrastructure": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "object",
                    "properties": {
                        "domain":{
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "ciliumNetworkPolicy": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "default": false
        },
        "crdConvertOnly":{
            "type": "boolean"
        },
        "crdInstall": {
            "type": "object",
            "properties": {
                "enable": {
                    "type": "boolean"
                },
                "kubectl": {
                    "type": "object",
                    "properties": {
                        "image": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "featuregates": {
            "type": "object",
            "properties": {
                "machinePool": {
                    "type": "boolean"
                },
                "eventBridgeInstanceState": {
                    "type": "boolean"
                },
                "autoControllerIdentityCreator": {
                    "type": "boolean"
                },
                "eks":{
                    "type": "object",
                    "properties": {
                        "enable": {
                            "type": "boolean"
                        },
                        "enableIAM": {
                            "type": "boolean"
                        },
                        "allowAddRoles": {
                            "type": "boolean"
                        },
                        "fargate": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "aws": {
            "type": "object",
            "properties": {
                "arn": {
                    "type": "string"
                }
            }
        },
        "ports": {
            "type": "object",
            "properties": {
                "healtz": {
                    "type": "integer"
                },
                "metrics": {
                    "type": "integer"
                },
                "webhook": {
                    "type": "integer"
                }
            }
        },
        "log": {
            "type": "object",
            "properties": {
                "level": {
                    "type": "integer"
                }
            }
        },
        "project": {
            "type": "object",
            "properties": {
                "branch": {
                    "type": "string"
                },
                "commit": {
                    "type": "string"
                }
            }
        },
        "watchFilter": {
            "type": "string"
        },
        "serviceType": {
            "type": "string"
        },
        "provider": {
            "type": "object",
            "properties": {
                "region": {
                    "type": "string"
                },
                "capi": {
                    "type": "object",
                    "properties": {
                        "accessKeyID": {
                            "type": "string"
                        },
                        "secretAccessKey": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "registry": {
            "type": "object",
            "properties": {
                "domain": {
                    "type": "string"
                }
            }
        },
        "verticalPodAutoscaler": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "global": {
            "type": "object",
            "properties": {
                "podSecurityStandards": {
                    "type": "object",
                    "properties": {
                        "enforced": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}
