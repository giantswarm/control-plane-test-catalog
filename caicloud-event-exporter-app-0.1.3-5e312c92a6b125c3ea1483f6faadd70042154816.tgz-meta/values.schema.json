{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "image",
        "metricsPort",
        "resources"
    ],
    "properties": {
        "image": {
            "type": "object",
            "required": [
                "repository",
                "tag"
            ],
            "properties": {
                "repository": {
                    "type": "string",
                    "minLength": 1
                },
                "tag": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "additionalProperties": false
        },
        "metricsPort": {
            "type": "integer",
            "additionalProperties": false
        },
        "resources": {
            "type": "object",
            "required": [
                "limits",
                "requests"
            ],
            "properties": {
                "limits": {
                    "type": "object",
                    "required": [
                        "memory"
                    ],
                    "properties": {
                        "memory": {
                            "type": "string"
                        },
                        "cpu": {
                            "type": "string"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "required": [
                        "memory"
                    ],
                    "properties": {
                        "memory": {
                            "type": "string"
                        },
                        "cpu": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "additionalProperties": true
}
