{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "ciliumNetworkPolicy": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "kyvernoPolicyExceptions": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "namespace": {
                    "type": "string"
                }
            }
        },
        "networkPolicy": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "ingress": {
                    "type": "object",
                    "properties": {
                        "namespaceSelector": {
                            "type": "object"
                        },
                        "podSelector": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "trivy": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "object",
                    "properties": {
                        "registry": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        }
                    }
                },
                "labels": {
                    "type": "object",
                    "properties": {
                        "application.giantswarm.io/team": {
                            "type": "string"
                        }
                    }
                },
                "livenessProbe": {
                    "type": "object",
                    "properties": {
                        "initialDelaySeconds": {
                            "type": "integer"
                        }
                    }
                },
                "modules": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "urls": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "rbac": {
                    "type": "object",
                    "properties": {
                        "pspEnabled": {
                            "type": "boolean"
                        }
                    }
                },
                "securityContext": {
                    "type": "object",
                    "properties": {
                        "allowPrivilegeEscalation": {
                            "type": "boolean"
                        },
                        "privileged": {
                            "type": "boolean"
                        },
                        "readOnlyRootFilesystem": {
                            "type": "boolean"
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "port": {
                            "type": "null"
                        }
                    }
                },
                "trivy": {
                    "type": "object",
                    "properties": {
                        "dbRepository": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "verticalPodAutoscaler": {
            "type": "object",
            "properties": {
                "trivy": {
                    "type": "object",
                    "properties": {
                        "containerPolicies": {
                            "type": "object"
                        },
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}
