{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "networkPolicy": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "ingress": {
                    "type": "object",
                    "properties": {
                        "namespaceSelector": {
                            "type": "object"
                        },
                        "podSelector": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "trivy": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "object",
                    "properties": {
                        "registry": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "port": {
                            "type": ["integer", "null"]
                        }
                    }
                }
            }
        }
    }
}
